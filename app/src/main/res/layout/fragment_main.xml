<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:showIn="@layout/activity_main"
        tools:context=".MainActivityFragment"
        style="@style/TextAppearance.AppCompat.Body1">


        <TextView android:text="My Nanodegree Apps!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:id="@+id/textView"
            android:layout_marginBottom="20dp"
            android:textIsSelectable="false"
            android:textSize="20dp"
            android:textColor="#000000" />

        <Button
            style="@style/AppTheme.NormButton"
            android:text="@string/streamer_app"
            android:id="@+id/streamer_app"
            android:layout_below="@+id/textView"
            android:minWidth="200dp"
            android:maxWidth="200dp" />

        <Button
            style="@style/AppTheme.NormButton"
            android:text="@string/score_app"
            android:id="@+id/score_app"
            android:layout_below="@+id/streamer_app"
            />

        <Button
            style="@style/AppTheme.NormButton"
            android:text="@string/library_app"
            android:id="@+id/library_app"
            android:layout_below="@+id/score_app"/>

        <Button
            style="@style/AppTheme.NormButton"
            android:text="@string/bigger_app"
            android:id="@+id/bigger_app"
            android:layout_below="@+id/library_app"/>

        <Button
            style="@style/AppTheme.NormButton"
            android:text="@string/reader_app"
            android:id="@+id/reader_app"
            android:layout_below="@+id/bigger_app"/>

        <Button
            style="@style/AppTheme.NormButton"
            android:background="@color/colorCapsButton"
            android:text="@string/capstone_app"
            android:id="@+id/capstone_app"
            android:layout_below="@+id/reader_app"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

</ScrollView>


